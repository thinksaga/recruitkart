model AuditLog {
  id          String   @id @default(uuid())
  user_id     String
  action      String
  entity_type String
  entity_id   String?
  details     Json?
  ip_address  String?
  user_agent  String?
  resource_url String?
  old_values  Json?
  new_values  Json?
  status      String?
  metadata    Json?
  created_at  DateTime @default(now())

  // Relations
  user User @relation(fields: [user_id], references: [id])
}
